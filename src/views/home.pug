doctype html
html(lang="kr")
	head
		meta(charset="UTF-8")
		meta(name="viewport", content="width=device-width, initial-scale=1.0")
		title Noom
		link(rel="stylesheet", href="https://unpkg.com/mvp.css")
	body 
		header
			h1 Noom
		main
			#welcome 
				form
					input(placeholder="room name", required, type="text")
					button Enter Room

			#call 
				#myStream
					video#myFace(autoplay, playinline, width="400", height="400") // playinline은 모바일에서 전체화면이 되지 않는다.
					button#mute Mute
					button#camera Turn Camera Off
					select#cameras

				video#peerFace(autoplay, playinline, width="400", height="400")

		script(src='/socket.io/socket.io.js') // 프론트단에서 socket.io를 불러온다.
		script(src="/public/js/app.js")